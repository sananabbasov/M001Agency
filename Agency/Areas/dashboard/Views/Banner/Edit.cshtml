@model Banner


<form enctype="multipart/form-data" method="post">
    <div class="container">
        <div class="row">
            <div class="input-group my-2">
                <input value="@Model.Title" name="Title" id="title" class="form-control" type="text" placeholder="Title" />
            </div>
            <div class="input-group my-2">
                <input value="@Model.Subtitle" name="Subtitle" id="title" class="form-control" type="text" placeholder="Subitle" />
            </div>
            <div class="input-group my-2">
                @ViewBag.PhotoError
                <input name="NewPhoto" id="title" class="form-control" type="file" placeholder="URl" />
                <br />

                <input type="hidden" name="oldPhoto" value="@Model.PhotoURL" />

            </div>

            <div class="input-group my-2">
                <div class="card">
                    <div class="card-body">
                        <br />
                        <img height="200" src="~/@Model.PhotoURL" />
                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-outline-warning" value="Update" />
        </div>
    </div>
</form>